<h1>Add a new ingredient</h1>

<div>
  <%= form_for @ingredient, url: { action: "create" } do |f| %>
    <div class="form-group ">
      <%= label(:ingredient, :name) %>
      <%= f.text_field(:name, class: "form-control-lg") %>
    </div>
    <div class="form-group">
      <%= label(:ingredient, :description) %>
      <%= f.text_field(:description, class: "form-control-lg") %>
    </div>
    <div class="form-check form-check-inline">
      <%= label(:ingredient, :fresh, class: "form-check-label") %>
      <%= f.check_box(:fresh, class: "form-check-input") %>
    </div>
    <br />
    <%= submit_tag("Create", class: "btn btn-primary") %>
  <% end %>
</div>