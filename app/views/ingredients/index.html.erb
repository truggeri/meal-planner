<h1>Ingredients</h1>

<table class="table table-striped">
  <thead class="thead-light" >
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Fresh?</th>
      <th scope="col">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to(ingredient.name, ingredient_path(ingredient)) %></td>
        <td><% if ingredient.fresh %><i class="fa fa-check"></i><% end %></td>
        <td><%= link_to(content_tag(:i, "", class: "fa fa-trash"), ingredient_path(ingredient), method: :delete) %></td>
      </tr>
    <% end %>
  </tbody>
</table>